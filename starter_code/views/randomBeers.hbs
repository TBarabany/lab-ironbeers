  <div class="row random-beer-container">
    <div class="col-2"></div>
    <div class="col-2">
      <img class="" src="{{beer.image_url}}" alt="Card image cap">
    </div>
    <div class="col-6 card-body">
      <h4 class="card-title row">{{beer.name}} </h4>
      <p class="card-text font-grey row">{{beer.tagline}}</p> 
      <p class="card-text row ">{{beer.description}}</p>
      <p class="card-text row">Food Pairing</p>
      <ul>
        {{#each beer.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      <p class="card-title row"><strong>Brewer's Tips:</strong> {{beer.brewers_tips}}</p>
      
    </div>
    <div class="col-2"></div>
  </div>